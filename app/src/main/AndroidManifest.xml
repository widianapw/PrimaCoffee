<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.praktikumprognet17">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.example.praktikumprognet17.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.example.praktikumprognet17.features.home.HomeFragment" />
        <activity android:name="com.example.praktikumprognet17.features.kasir.keranjang.bayar_keranjang.KeranjangBayar" />
        <activity android:name="com.example.praktikumprognet17.features.kasir.keranjang.show_keranjang.KeranjangActivity" />
        <activity android:name="com.example.praktikumprognet17.features.kasir.keranjang.edit_keranjang.EditQtyDialog" />
        <activity android:name="com.example.praktikumprognet17.Firebase" />
        <activity android:name="com.example.praktikumprognet17.features.kasir.qty_dialog.QtyDialog" />
        <activity android:name="com.example.praktikumprognet17.features.setting.edit_profil.EditPassword" />
        <activity android:name="com.example.praktikumprognet17.features.setting.edit_profil.UserProfile" />
        <activity android:name="com.example.praktikumprognet17.features.setting.SettingFragment" />
        <activity android:name="com.example.praktikumprognet17.features.kasir.KasirFragment" />
        <activity android:name="com.example.praktikumprognet17.RegisterActivity" />
        <activity android:name="com.example.praktikumprognet17.MainActivity" />
        <activity
            android:name="com.example.praktikumprognet17.LoginActivity"
            android:windowSoftInputMode="stateVisible|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".MyFirebaseMessagingService"
            >
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" /> <!-- [END fcm_default_icon] -->
        <!-- [START fcm_default_channel] -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="SA" />
    </application>

</manifest>